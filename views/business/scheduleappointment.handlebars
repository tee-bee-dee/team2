<section class="content-header">
  <div id="txt" class="pull-right"></div>
  <h1 class="pull-right" id="currentDate"></h1>
</section>

<section class="content">
  <div class="col-md-6">
    <div class="box box-success">
      <div class="box-header with-border">
        <h3 class="box-title">Schedule Appointment</h3>
      </div>
      <div class="box-body">
        <form method="post" action="scheduleappointment" enctype="application/x-www-form-urlencoded">
          <div class="form-group">
            <label for="inputFirstName">First Name</label>
            <input type="text" id="inputFirstName" name="inputFirstName" class="form-control" required>
            <label for="inputLastName">Last Name</label>
            <input type="text" id="inputFirstName" name="inputLastName" class="form-control" required>
            <label for="inputEmail">Email</label>
            <input type="inputEmail" id="inputEmail" name="inputEmail" class="form-control" required>
            <label for="inputPhone">Phone</label>
            <input type="phone" id="inputPhone" name="inputPhone" class="form-control" required>
            <label for="inputEmployee">Doctor</label>
            <select id="inputEmployee" name="inputEmployee" class="form-control">
              <option value="" selected disabled>Select Doctor</option>
              {{#each employees}}
              <h1>{{fname}} {{lname}}</h1>
                <option label='{{fname}}' value="{{_id}}">{{fname}}</option>
              {{/each}}
            </select>
          </div>
          <input class="btn btn-block btn-primary btn-lg btn-flat" type="submit">
        </form>
      </div>
    </div>
  </div>
</section>
