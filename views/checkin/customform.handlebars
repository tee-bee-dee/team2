<!DOCTYPE html>
<html>
<head>
  <title>Welcome</title>

  {{>styles}}
  {{>scripts}}
  <script src="/plugins/formBuilder/form-builder.min.js"></script>
  <script src="/plugins/formBuilder/form-render.min.js"></script>

  <style>
  .customBG {
    background: rgb({{bg.r}}, {{bg.g}}, {{bg.b}});
  }

  .container-checkin {
    background-color: {{containerBg}};
  }
  footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 50px;
    background-color: #071C33;
  }
  footer h4 {
    color: #eeeeee;
    text-align: center;
    padding: 0;
    margin: 0;
    line-height: 50px;
    font-weight: bold;
    text-shadow: 0px 0px 8px #ffae00;
  }
  </style>
</head>
<body class="customBG">
  <div>
    <div class="row" style="margin-top: 150px; margin-bottom: 100px;">
      <div class="col-xs-10 col-sm-6 col-md-8 col-lg-6 center-block" style="float:none; padding: 20px">
        <div class="box">
          <div class="box-header text-center">
            <h1>Additional Info</h1>
            <h3 class="box-title">Please tell us a little bit more about yourself.</h3>
          </div>
          <div class="box-body">
            <div class="row innerInfo">
              <div id="form" class="col-md-8 col-md-offset-2"></div>
            </div>
            <br>
            <div class="row innerInfo">
              <div class="col-md-4 col-md-offset-4">
                <form action="customform">
                  <button class="btn btn-lg btn-success btn-block" type="submit">Next</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <footer>
    <h4>Powered by ENQUÃ‰</h4>
  </footer>
</body>
<script>
jQuery(function($) {
  var form = '{{form}}';
  form = form.replace(/&quot;/g,'"');
  var formRender = $(document.getElementById('form')).formRender({
    formData: form,
    dataType: 'json'
  });
});
</script>
</html>
